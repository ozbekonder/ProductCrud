@model ProductCreateModel
<div class="card card-info">
    <div class="card-header">
        <h3 class="card-title">Create Product</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form asp-action="Create" asp-controller="Product" asp-area="" method="post" class="form-horizontal" enctype="multipart/form-data">
        <div class="card-body">

            <div class="form-group row">
                <label asp-for="@Model.ProductName" class="col-sm-2 col-form-label">Product Name</label>
                <div class="col-sm-10">
                    <span asp-validation-for="@Model.ProductName" class="text-danger"></span>
                    <input type="text" asp-for="@Model.ProductName" class="form-control" placeholder="Product Name">
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="@Model.ProductCode" class="col-sm-2 col-form-label">Product Code</label>
                <div class="col-sm-10">
                    <span asp-validation-for="@Model.ProductCode" class="text-danger"></span>
                    <input type="text" asp-for="@Model.ProductCode" class="form-control" placeholder="Product Code">
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="@Model.Quantity" class="col-sm-2 col-form-label">Product Quantity</label>
                <div class="col-sm-10">
                    <span asp-validation-for="@Model.Quantity" class="text-danger"></span>
                    <input type="text" asp-for="@Model.Quantity" class="form-control" placeholder="Product Quantity">
                </div>
            </div>


        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <button type="submit" asp-action="Create" asp-controller="Product" asp-area="" class="btn btn-info">Save</button>
            <button type="submit" asp-action="Index" asp-controller="Product" asp-area="" class="btn btn-default float-right">Cancel</button>
        </div>
        <!-- /.card-footer -->
    </form>
</div>
<!-- /.card -->
<!-- /.card -->
